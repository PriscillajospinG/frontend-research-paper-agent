# Research Paper Agent Frontend Environment Configuration

# Backend API Configuration
REACT_APP_API_URL=http://localhost:8000

# WebSocket Configuration  
REACT_APP_WS_URL=ws://localhost:8000

# Application Configuration
REACT_APP_NAME=Research Paper Agent
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_REAL_TIME_MONITORING=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_MULTI_FORMAT_EXPORT=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_DRAFT_EXTENSIONS=pdf,docx,txt
REACT_APP_ALLOWED_FORMAT_EXTENSIONS=json,docx
